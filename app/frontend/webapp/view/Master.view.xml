<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:filterbar="sap.ui.comp.filterbar"
    controllerName="flexso.htf.frontend.frontend.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns="sap.m"
>
    <f:DynamicPage
        id="_IDGenDynamicPage"
        title="Mission 108"
    >
        <f:title>
            <f:DynamicPageTitle id="id.DynamicPageTitle">
                <f:heading>
                    <Title
                        id="id.DynamicPageTitleText"
                        text="Exploration Cockpit"
                    />
                </f:heading>

                <f:expandedContent>
                    <Label
                        id="id.DynamicPageTitleSubText"
                        text="Plan your next exploration mission"
                    />
                </f:expandedContent>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader id="id.DynamicPageHeader">
                <f:content>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table id="galaxiesTable"
                inset="false"
                items="{
                    path: '/KnownGalaxies',
                    sorter: {
                        path: 'distance'
                    }
                }"
                itemPress=".onItemPress">
                <infoToolbar>
                    <OverflowToolbar>
                        <Label text="all galaxies"/>
                    </OverflowToolbar>
                </infoToolbar>
                <columns>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true">
                        <Text text="name" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true">
                        <Text text="distance" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="End">
                        <Text text="numberOfSolarSystems" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="Center">
                        <Text text="averagePlanetsPerSolar" />
                    </Column>
                    <Column
                        hAlign="End">
                        <Text text="explorationReport" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text
                                text="{name}" />
                            <Text
                                text="{distance}" />
                            <Text
                                text="{numberOfSolarSystems}" />
                            <Text
                                text="{averagePlanetsPerSolar}" />
                            <Text
                                text="{explorationReport}" />
                            
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>